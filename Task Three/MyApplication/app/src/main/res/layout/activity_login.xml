<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0277BD"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.company.charnear.taskthreewizn.activity.LoginActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TaskThreeWiZN"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:background="@drawable/edittextstyle"
        android:padding="4dp"
        android:id="@+id/userNameLoginText"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="Email"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:maxLines="1"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:id="@+id/passwordLoginText"
        android:background="@drawable/edittextstyle"
        android:padding="4dp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_button_drawable"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:text="@string/sign_in" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="#FF8A65" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_button_drawable"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:text="@string/sign_up"/>
    </LinearLayout>
</LinearLayout>
